<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikhilmeena10.iitbhumobile.MainActivity">

    <ImageView
        android:id="@+id/logobutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scaleType="fitXY"
        android:src="@drawable/iitbhu"/>

    <ImageView
        android:id="@+id/hor_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/logobutton"
        android:src="@drawable/bar"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_grid"
        android:layout_below="@id/hor_bar"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:columnCount="4">

        <LinearLayout
            android:id="@+id/map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/map_button_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/graduate"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/map_button_name"/>

        </LinearLayout>

    </GridLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/iit_bhu_background"
        />

</RelativeLayout>
